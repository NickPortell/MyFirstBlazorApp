@page "/teamselection"

<h3>TeamSelection</h3>

@if (isInitialized == false)
{
    <div class="content-loading">
        <img src="Content/PokeballEmptyOutline.png"/>
    </div>
    <p>Loading...</p>
}
else
{
    <div class=@State.PokemonTeamContainerBaseClass>
        <PokemonTeamSlot Pokemon=State.PokemonTeam[0] SlotIndex=0 ClickTeamSlot=ClickTeamSlot SelectPokemon=SelectPokemon />
        <PokemonTeamSlot Pokemon=State.PokemonTeam[1] SlotIndex=1 ClickTeamSlot=ClickTeamSlot SelectPokemon=SelectPokemon />
        <PokemonTeamSlot Pokemon=State.PokemonTeam[2] SlotIndex=2 ClickTeamSlot=ClickTeamSlot SelectPokemon=SelectPokemon />
        <PokemonTeamSlot Pokemon=State.PokemonTeam[3] SlotIndex=3 ClickTeamSlot=ClickTeamSlot SelectPokemon=SelectPokemon />
        <PokemonTeamSlot Pokemon=State.PokemonTeam[4] SlotIndex=4 ClickTeamSlot=ClickTeamSlot SelectPokemon=SelectPokemon />
        <PokemonTeamSlot Pokemon=State.PokemonTeam[5] SlotIndex=5 ClickTeamSlot=ClickTeamSlot SelectPokemon=SelectPokemon />
        <PokemonSideTray Pokemon=State.SelectedPokemon />
    </div>
    <PokemonSelectionForm ChangePokemonSlot=ChangePokemonSlot/>
}
