
<div class=@ImgContainerClass>
    @if (Pokemon != null)
    {
        <img name=@ImgName
         class=@ImgClass
         src=@ImgSrc
         alt=@ImgAlt />
        <div class="pokemon-type-breakdown-container">
            <img src=@GetPokemonTypeImg(Pokemon.Types[0].Type.Name) />
            @if (Pokemon.Types.Count() > 1)
            {
                <img src=@GetPokemonTypeImg(Pokemon.Types[1].Type.Name) />
            }
        </div>
        <div class="pokemon-stats-breakdown-container">
            <div>
                <p>@Pokemon.Stats[0].Stat.Name</p>
                <p>@Pokemon.Stats[0].Base_Stat</p>
            </div>
            <div>
                <p>@Pokemon.Stats[1].Stat.Name</p>
                <p>@Pokemon.Stats[1].Base_Stat</p>
            </div>
            <div>
                <p>@Pokemon.Stats[2].Stat.Name</p>
                <p>@Pokemon.Stats[2].Base_Stat</p>
            </div>
            <div>
                <p>@Pokemon.Stats[3].Stat.Name</p>
                <p>@Pokemon.Stats[3].Base_Stat</p>
            </div>
            <div>
                <p>@Pokemon.Stats[4].Stat.Name</p>
                <p>@Pokemon.Stats[4].Base_Stat</p>
            </div>
            <div>
                <p>@Pokemon.Stats[5].Stat.Name</p>
                <p>@Pokemon.Stats[5].Base_Stat</p>
            </div>
        </div>
    }
</div>

