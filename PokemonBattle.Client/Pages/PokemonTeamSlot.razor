@inherits PokemonBattle.Client.Components.Classes.Shared.PokemonDataBase
@using PokemonBattle.Models.V1.Pokemon;


<div id=@SlotId
     class=@Class
     @ref=@Slot
     @onclick=@(args => ClickPokemon(Slot, SlotId, args))>
    <div class=@PokemonTeamImageBaseClass>
        <img name=@ImgName
             class=@ImgClass
             src=@ImgSrc
             alt=@ImgAlt />
    </div>
    <div class=@PokemonTeamNameBaseClass>
        <p>@DisplayName</p>
    </div>
</div>

@code {
    [Parameter]
    public PokemonData Pokemon { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public int SlotIndex { get; set; }

    private string SlotId => Pokemon != null ? Pokemon.Id + "-" + SlotIndex : "empty-slot-" + SlotIndex;

    private string ImgName => Pokemon != null ? Pokemon.Name : "empty-pokemon";

    private string ImgClass => Pokemon != null ? Pokemon.Name + "-img" : EmptyPokemonBaseClass;

    private string ImgSrc => Pokemon != null ? Pokemon.Sprites.Front_Default : @DefaultTeamPokemonImgUrl;

    private string ImgAlt => Pokemon != null ? Pokemon.Name : "EmptyPokeball";

    private string DisplayName => Pokemon != null ? Pokemon.Name.ToUpper() : "Empty";

    public ElementReference Slot;
}
