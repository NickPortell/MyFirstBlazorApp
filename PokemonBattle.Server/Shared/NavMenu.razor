@inject IJSRuntime JS


<div class="top-row pl-4 navbar navbar-dark">
    <button class="navbar-toggler" @onclick=@(args => ToggleNavMenu(Menu, args))>
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div @ref=Menu>
    <div class="top-row pl-4 navbar navbar-dark">
        <a class="navbar-brand" href="">PokemonBattle.Server</a>
    </div>
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
    </ul>
</div>

@code {
    ElementReference Menu;

    private void ToggleNavMenu(ElementReference menu, MouseEventArgs args)
    {
        JS.InvokeVoidAsync("ToggleNavMenu", menu);
    }

    private void ShowSomething()
    {
        JS.InvokeVoidAsync("showPrompt");
    }
}
